    "i18next-http-backend": "^2.4.2",
    "lucide-react": "^0.575.0",
    "prettier": "^3.2.0",
    "radix-ui": "^1.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-i18next": "^14.0.1",
    "react-router-dom": "^6.21.2",
    "react-scroll": "^1.9.0",
    "react-slick": "^0.29.0",
    "slick-carousel": "^1.8.1",
    "tailwind-merge": "^3.5.0",
    "zustand": "^5.0.11"
